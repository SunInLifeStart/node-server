            tr
              td
                a(href="https://36kr.com/tags/qufenqi" target="_blank") # 趣分期
            tr
              td
                a(href="https://36kr.com/tags/wangyinqianbao" target="_blank") # 网银钱包
            tr
              td
                a(href="https://36kr.com/p/5055707.html" target="_blank") # 苹果iPhone8

    .row
      .col(style="padding-left: 15px;")
        article.article.article--big.doc
          div
            div
              span(style="font-size: 16px;font-weight: 700;") 最新文档
              a.btn.btn-outline-secondary(href=personalPortal + "/#/docs" target="_blank" style="padding: 2px 10px;float: right;") 更多
          table.table(style="width: 95%; margin: 0 auto;")
            each doc in docs
              tr
                td
                  div(style="line-height: 25px; padding: 16px 5px;clear:both")
                    a(href=thumb + "" + personalPortal + doc.url target="_blank")
                      img(src=personalPortal + "" + doc.iconUrl, style="width: 74px; height: 94px; vertical-align: middle;float: left; border: 1px solid #dcdada;")
                      span(style="float: left; font-size: 14px; width: 70%;margin-left: 8px; ")=doc.name
                    span(style="float: left; font-size: 12px; width: 30px;margin-left: 8px;")=doc.uname
                    span(style="float: left; font-size: 12px; width: 115px; margin-left: 8px;")=doc.created
      .col
        article.article.article--big
          div
            div
              span(style="font-size: 16px;font-weight: 700;") 集团通讯录
              a.btn.btn-outline-secondary(href="/contactWay?page=1", style="padding: 2px 10px;float: right;") 更多
          table.table(style="width: 95%; margin: 0 auto;")
            each mm, index in comm
              tr
                td
                  p(style="width:400px")
