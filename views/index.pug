              tr
                td
                  p
                    - let img = index == 0? 'arrow.png': 'arrow2.png';
                    img(src="/images/" + img, style="vertical-align: middle;margin-right: 2%;")
                    a(href="/rulesRegulations/details?type=" + encodeURI('规章制度') + "&id=" + JSON.parse(r).articleId) #{JSON.parse(r).title}
                td(style="text-align: right;")
                  time #{JSON.parse(r).time.split(' ')[0]}

      .col
        img.rounded(src="/images/党建.jpg" alt="党建" style="margin-bottom: 12px;")
        article.article.article--big(style="height: 292px;")
          div
            div
