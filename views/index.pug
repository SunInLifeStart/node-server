  style.
    body {background: #e4e3e3 url("/images/head/banner.png") no-repeat center}
    .carousel-item .row {
      height: 245px;
    }
    .carousel-item .row .col-md-6 {
      margin-top: 23px;
    }
    .carousel-item .row .col-md-5 {
      margin-top: 23px;
    }

    .carousel-item .row .col-md-5 img {
      width: 350px;
      height: 200px;
    }
    .carousel-inner {
      background: #fff;
    }
    .table p {
      width: 230px;
      overflow: hidden;
      white-space: nowrap;
      text-overflow: ellipsis;
      margin-bottom: 0;
    }
    .article--big {
      height: 460px;
    }
