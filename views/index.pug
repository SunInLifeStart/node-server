              li
                div
                  p.number
                    span.counterDX(data-counter-value="300")
                    span.unit 万平方米

                  p.title 建设科技载体
            .clear
    .row
      .col(style="padding-left: 15px;")
        article.article.article--big(style="height: 260px;")
          div
            div
              span(style="font-size: 16px;font-weight: 700;") 领导讲话
              a.btn.btn-outline-secondary(href="/leadershipSpeechs?page=1", style="padding: 2px 10px;float: right;") 更多
          table.table(style="width: 95%; margin: 0 auto;")
            each ls, index in leadershipSpeech
              tr
                td
                  p
                    - let img = index == 0? 'leader3.png': 'leader1.png';
                    img(src="/images/" + img, style="vertical-align: middle;margin-right: 2%;")
                    a(href="/leadershipSpeechs/details?type=" + encodeURI('领导讲话') + "&id=" + JSON.parse(ls).articleId) #{JSON.parse(ls).title}

                td(style="text-align: right;")
                  time #{JSON.parse(ls).time.split(' ')[0]}
      .col
        article.article.article--big(style="height: 260px;")
          div
            div
              span(style="font-size: 16px;font-weight: 700;") 通知公告
              a.btn.btn-outline-secondary(href="/noticeBulletin?page=1", style="padding: 2px 10px;float: right;") 更多
          table.table(style="width: 95%; margin: 0 auto;")
            each nb, index in noticeBulletin
              tr
                td
                  p
                    - let color = index == 0? 'ea3476': '3488ea';
                    span(style="color: #" + color + ";")  •&nbsp;
                    a(href="/noticeBulletin/details?type=" + encodeURI('通知公告') + "&id=" + JSON.parse(nb).articleId)
                      | #{JSON.parse(nb).title}
                td(style="text-align: right;")
                  time #{JSON.parse(nb).time.split(' ')[0]}

      .col
        article.article.article--big(style="height: 260px;")
          div
            div
              span(style="font-size: 16px;font-weight: 700;") 集团发文
              a.btn.btn-outline-secondary(href="/writings?page=1", style="padding: 2px 10px;float: right;") 更多
          table.table(style="width: 95%; margin: 0 auto;")
            each w, index in writing
              tr
                td
                  p
                    - let color = index == 0? 'ea3476': '3488ea';
                    span(style="color: #" + color + ";") •&nbsp;
                    a(href="/writings/details?type=" + encodeURI('集团发文') + "&id=" + JSON.parse(w).articleId) #{JSON.parse(w).title}
                td(style="text-align: right;")
                  time #{JSON.parse(w).time.split(' ')[0]}
    .row
      .col(style="padding-left: 15px;")
